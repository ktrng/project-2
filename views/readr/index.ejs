<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ('../partials/head.ejs') %>
  </head>
  <body>
    <%- include('../partials/nav.ejs') %>
    <h2>Top 10:</h2>
    <ul>
      <% for (let i = 0; i < mangas.length; i++) { %>
        <li>
          <a href="/readr/<%= mangas[i].id %>"><%= mangas[i].title %></a><br/><br/>
          <a href="/readr/<%= mangas[i].id %>"><img src="<%= mangas[i].img %>" alt="<%= mangas[i].title %>"></a><br/><br/>
          <a href="/readr/<%= mangas[i].id %>/edit">Edit</a>
          <form action="/readr/<%= mangas[i].id %>?_method=DELETE" method="POST">
            <input type="submit" value="Remove">
          </form>
          <br/><br/>
        </li>
      <% } %>
    </ul>
    <h2>Your Library</h2>
    <ul>
    <% for (let i = 0; i < user.library; i++) { %>
      <li>
        <a href="/readr/<%=user.libarary[0].id%>"><%=/readr/<%=user.libarary[0].title%>%></a>
      </li>
    </ul>
  </body>
</html>
