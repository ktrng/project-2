<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ('../partials/head.ejs') %>
  </head>
  <body>
    <div class="container">
      <%- include ('../partials/nav.ejs') %>
      <h2>Edit Manga</h2>
      <form action="/readr/<%= manga.id %>?_method=PUT" method="POST">
        Title: <input type="text" name="title" value="<%= manga.title %>"><br/><br/>
        Description: <input type="text" name="description" value="<%= manga.description %>"><br/><br/>
        Image: <input type="text" name="img" value="<%= manga.img %>"><br/><br/>
        Info Link: <input type="text" name="infoLink" value="<%= manga.infoLink %>"><br/><br/>
        Buy Link: <input type="text" name="buyLink" value="<%= manga.buyLink %>"><br/><br/>
        <input type="submit" value="Submit Changes">
      </form>
    </div>
    <%- include ('../partials/footer.ejs') %>
  </body>
</html>
