<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ('../partials/head.ejs') %>
  </head>
  <body>
    <%- include ('../partials/nav.ejs') %>
    <h2><%= manga.title %></h2>
    <img src="<%= manga.img %>" alt="<%= manga.title %> Cover">
    Description: <br/>
      <%= manga.description %><br/><br/>
    <a href="<%= manga.infoLink %>">Info</a><br/><br/>
    <a href="<%= manga.buyLink %>">Buy</a><br/><br/>
    <a href="/readr/<%= manga.id %>/edit">Edit</a><br/><br/>
    <form class="" action="/readr/<%=id%>" method="POST">
      <textarea name="comment" rows="8" cols="80" placeholder="Enter comment here"></textarea><br/>
      <input type="submit" value="Comment">
    </form>
    <div class="">
      <h3>Comments:</h3>
      <ul>
        <% for (let i = 0; i < comments.length; i++) { %>
          <li>
            <%=comments.author%>
          </li>
      </ul>
    </div>
  </body>
</html>
